#:schema https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json

version = 2
final_space = true
console_title_template = ' {{ .Folder }} :: {{if .Root}}Admin{{end}}'
terminal_background = 'p:t-background'

[[blocks]]
  type = 'prompt'
  alignment = 'left'

  [[blocks.segments]]
    type = 'text'
    style = 'plain'
    foreground = 'p:white'
    background = 'transparent'
    template = ' '

  [[blocks.segments]]
    type = 'path'
    style = 'plain'
    foreground = '#8aadf4'
    template = '{{ .Path }} <p:light-sky-blue></>'

    [blocks.segments.properties]
      style = 'mixed'
  
  [[blocks.segments]]
    type = "kubectl"
    style = "plain"
    foreground = "#f5bde6"
    template = "󱃾 <b>{{ .Context }}{{ if .Namespace }}::{{ .Namespace }}{{ end }}</b>"

  [[blocks.segments]]
    type = 'git'
    style = 'plain'
    foreground = '#a6da95'
    template = '{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }}'

    [blocks.segments.properties]
      branch_icon = '   '
      fetch_status = true

  [[blocks.segments]]
    type = 'status'
    style = 'plain'
    foreground = 'p:terminal-red'
    template = ' '

[[blocks]]
  type = 'prompt'
  alignment = 'right'
  overflow = 'hide'

  [[blocks.segments]]
    type = 'go'
    style = 'plain'
    foreground = 'p:light-sky-blue'
    template = ' {{ .Full}}'

  [[blocks.segments]]
    type = "rust"
    style = "plain"
    foreground = "#e25928"
    template = "  {{ .Full }} "

  [[blocks.segments]]
  type = 'command'
  style = 'plain'
  foreground = 'p:white-blue'

      [blocks.segments.properties]
  command = 'echo $TICKET'
  shell = 'zsh'

  [[blocks.segments]]
    type = 'command'
    style = 'plain'
    foreground = 'p:white-blue'

    [blocks.segments.properties]
      command = 'git log --pretty=format:%cr -1 || date +%H:%M:%S'
      shell = 'bash'


[[blocks]]
  type = 'prompt'
  alignment = 'left'
  newline = true

  [[blocks.segments]]
    type = 'text'
    style = 'plain'
    foreground = 'p:pistachio-green'
    template = '➜'

[transient_prompt]
  foreground = 'p:terminal-blue'
  background = 'p:t-background'
  template = '➜ '

[secondary_prompt]
  foreground = 'p:terminal-blue'
  background = 'transparent'
  template = '➜ '

[palette]
  blue-bell = '#9aa5ce'
  blue-black = '#565f89'
  celeste-blue = '#b4f9f8'
  light-sky-blue = '#7dcfff'
  main-bg = '#24283b'
  pastal-grey = '#cfc9c2'
  pistachio-green = '#9ece6a'
  t-background = 'p:main-bg'
  terminal-black = '#414868'
  terminal-blue = '#7aa2f7'
  terminal-green = '#73daca'
  terminal-magenta = '#bb9af7'
  terminal-purple = "#9d7cd8"
  terminal-red = '#f7768e'
  terminal-white = '#c0caf5'
  terminal-yellow = '#e0af68'
  white-blue = '#a9b1d6'
